<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_sale"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/txt_bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad a pagar:"
            android:textColor="@color/colorGreen" />

        <EditText
            android:id="@+id/txt_to_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorGreen"
            android:textColor="@color/colorGreen" />

        <Button
            android:id="@+id/btn_pay_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_to_pay"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@color/colorOceanBlue"
            android:text="Pagar"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_to_pay"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/btn_pay_sale"
            android:background="@color/colorGreen"
            android:text="Cancelar"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>